@page "/checkout/{orderId:int}"
@inject HttpClient Http
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <h2>My order</h2>
    <div class="order-summary">
        @foreach (var item in orderDetails.Items)
        {
            <div class="order-item mb-3 p-3 border w-75">
                <div class="row">
                    <div class="col-6 d-flex align-items-center">
                        <img src="images/ProductPlaceholder.svg" alt="Product image" class="img-fluid img-square me-3">
                        <div>
                            <h4 class="h5">@item.Name</h4>
                            <p class="small">@item.Quantity x @item.Price.ToString("C")</p>
                            <p class="small">Size: @item.Size</p>
                            <p class="small">Color: @item.Color</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="order-totals mt-3 p-3 border">
            <p class="d-flex justify-content-between">
                <span>Subtotal</span>
                <span>@orderDetails.Subtotal.ToString("C")</span>
            </p>
            <p class="d-flex justify-content-between">
                <span>Discount</span>
                <span>@orderDetails.Discount.ToString("C")</span>
            </p>
            <p class="d-flex justify-content-between">
                <span>Delivery</span>
                <span>@orderDetails.DeliveryFee == 0 ? "Free" : @orderDetails.DeliveryFee.ToString("C")</span>
            </p>
            <h4 class="d-flex justify-content-between">
                <span>Total</span>
                <span>@orderDetails.Total.ToString("C")</span>
            </h4>
        </div>
    </div>

    <div class="shipping-details mt-4 p-3 border">
        <h5>Shipping details</h5>
        <p>@shippingAddress</p>
        <button class="btn btn-link" @onclick="EditShippingDetails">Edit</button>
    </div>

    <div class="payment-method mt-4 p-3 border">
        <h5>Payment method</h5>
        <p>@paymentMethod</p>
        <button class="btn btn-link" @onclick="EditPaymentMethod">Edit</button>
    </div>

    <div class="comment mt-4 p-3 border">
        <h5>Comment</h5>
        <textarea class="form-control" placeholder="Enter your comment" @bind="comment"></textarea>
    </div>

    <div class="text-center mt-4">
        <button class="btn btn-primary btn-lg" @onclick="ProceedToCheckout">Proceed to Checkout</button>
    </div>
</div>

@code {

    [Parameter]
    public int orderId { get; set; }
    private OrderDetails orderDetails = new OrderDetails();
    private string shippingAddress = "8000 S Kirkland Ave, Chicago, IL 60652";
    private string paymentMethod = "7741 ******** 6644";
    private string comment = "";

    protected override async Task OnInitializedAsync()
    {
        orderDetails = await Http.GetFromJsonAsync<OrderDetails>($"https://checkout-provider.azurewebsites.net/api/checkout/{orderId}");
    }

    private void EditShippingDetails()
    {
        // Implement edit shipping details functionality
    }

    private void EditPaymentMethod()
    {
        // Implement edit payment method functionality
    }

    private void ProceedToCheckout()
    {
        // Implement proceed to checkout functionality
    }

    private void NavigateToShipping()
    {
        NavigationManager.NavigateTo("/shipping-details");
    }

    private void NavigateToPayment()
    {
        NavigationManager.NavigateTo("/payment-method");
    }
}
