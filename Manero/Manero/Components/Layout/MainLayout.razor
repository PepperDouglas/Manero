@inherits LayoutComponentBase
@inject NavigationManager NavigationManager


<style>
    /* Ta bort nedåtpilen från dropdown */
    .nav-item.dropdown .dropdown-toggle::after {
        display: none;
    }

</style>

<div class="container-fluid mt-3">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="row w-100">
            <!-- Navigationslänkar till vänster -->
            <div class="col-4 d-flex align-items-center">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-list"></i>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: #f8f9fa;">
                        <li><NavLink class="dropdown-item" href="/home">Home</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/products">Products</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/profile">Profile</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/wishlist">Wishlist</NavLink></li>
                        <li><NavLink class="dropdown-item" href="/orders">Orders</NavLink></li>
                    </ul>
                </div>
            </div>

            <!-- Centrerad navigationslänk som ändras baserat på route -->
            <div class="col-4 d-flex justify-content-center align-items-center">
                <span class="navbar-text">Manero
                    @* @if (IsHome)
                    {
                    <strong>MANERO</strong>
                    }
                    else if (IsCart)
                    {
                    <strong>Cart</strong>
                    } *@
                </span>
            </div>

            <!-- Spacer som skjuter allt efter den till höger -->
            <div class="col-4 d-flex justify-content-end align-items-center">
                <NavLink class="nav-item nav-link" href="/Cart">
                    <i class="bi bi-bag" style="color: #495057;"></i>
                </NavLink>
            </div>
        </div>
    </nav>
</div>



@Body

@if (ShouldShowFooter())
{
    

<footer class="footer fixed-bottom bg-light">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-2 col-sm-auto">
                <NavLink class="nav-link" href="/">
                    <!-- Home Icon -->
                    <i class="bi bi-house-door" style="color: #495057;"></i>
                </NavLink>
            </div>
            <div class="col-2 col-sm-auto">
                <NavLink class="nav-link" href="/search">
                    <!-- Search Icon -->
                    <i class="bi bi-search" style="color: #495057;"></i>
                </NavLink>
            </div>
            <div class="col-2 col-sm-auto">
                <NavLink class="nav-link" href="/cart">
                    <!-- Bag Icon -->
                    <i class="bi bi-bag" style="color: #495057;"></i>
                </NavLink>
            </div>
            <div class="col-2 col-sm-auto">
                <NavLink class="nav-link" href="/favorites">
                    <!-- Heart Icon -->
                    <i class="bi bi-heart" style="color: #495057;"></i>
                </NavLink>
            </div>
            <div class="col-2 col-sm-auto">
                <NavLink class="nav-link" href="/profile">
                    <!-- Profile Icon -->
                    <i class="bi bi-person" style="color: #495057;"></i>
                </NavLink>
            </div>
        </div>
        <hr class="footer-line" style="height: 4px; background-color: #343a40; border: none; width: 20%;">
    </div>
</footer>
}


@code {
    bool ShouldShowFooter()
    {
        // Logic to determine whether to show the footer based on the current page or route
        // For example:
        return NavigationManager.Uri.Contains("/") || NavigationManager.Uri.Contains("/Mom");
    }
}

